{
  "name": "kaia-perplexity",
  "version": "1.0.0",
  "private": true,
  "description": "K.A.I.A - Kommunal AI Assistent Demo",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "npm run clean:workspaces && rm -rf node_modules package-lock.json",
    "clean:workspaces": "rm -rf */node_modules */package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
